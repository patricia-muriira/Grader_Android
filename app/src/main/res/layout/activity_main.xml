<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E3F2FD"
        android:padding="16dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Super Grader!"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:padding="16dp" />

        <EditText
            android:id="@+id/subject1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter marks for Subject 1"
            android:inputType="number"
            android:backgroundTint="#64B5F6"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />


        <EditText
            android:id="@+id/subject2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter marks for Subject 2"
            android:inputType="number"
            android:backgroundTint="#64B5F6"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/subject3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter marks for Subject 3"
            android:inputType="number"
            android:backgroundTint="#64B5F6"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/subject4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter marks for Subject 4"
            android:inputType="number"
            android:backgroundTint="#64B5F6"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/subject5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter marks for Subject 5"
            android:inputType="number"
            android:backgroundTint="#64B5F6"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:padding="8dp" />

        <TextView
            android:id="@+id/mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mean:"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:padding="8dp" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grade:"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:padding="8dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>